---
export interface Props {
  noPadding?: boolean;
  ariaHidden?: boolean;
  class?: string;
}

const {
  noPadding = false,
  ariaHidden = true,
  class: className = "",
} = Astro.props;
---

<div class:list={["mx-auto max-w-app", noPadding ? "px-0" : "px-4", className]}>
  <hr class="border-border" aria-hidden={ariaHidden} />
</div>
